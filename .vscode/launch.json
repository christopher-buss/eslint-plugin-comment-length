{
  "configurations": [
    {
      "type": "node",
      "name": "vscode-eslint-debug",
      "request": "launch",
      "console": "integratedTerminal",
      "internalConsoleOptions": "neverOpen",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "smartStep": true,
      "args": [
        "eslint:files",
        "./dummy/src/index.ts*"
      ]
    }
  ]
}